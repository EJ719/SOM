<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/솜솜이">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#67804d"
            android:text="'배고프다뭐먹을까' 님"
            android:typeface="serif"
            android:layout_gravity="center"
            android:textSize="20dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#67804d"
            android:text="오늘도 SOM하세요"
            android:typeface="serif"
            android:layout_gravity="center"
            android:textSize="15dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이번 달의 예약 현황"
            android:typeface="serif"
            android:layout_marginTop="35dp"
            android:textColor="#67804d"
            android:textSize="20dp"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상담방은 상담 10분전 부터 활성화 됩니다."
            android:typeface="serif"
            android:textColor="#67804d"
            android:layout_marginTop="3dp"
            android:textSize="12dp"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp">
        </TextView>
        <ScrollView
            android:layout_width="320dp"
            android:layout_gravity="center"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:scrollbarStyle="outsideOverlay"
            android:background="#FFFFEC">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="11월 24일\n오후 1:00 ~ 오후 3:00\n '박보검 상담사' 님의 집단 상담 예약"
                    android:typeface="serif"
                    android:textColor="#67804d"
                    android:layout_marginLeft="20dp"
                    android:textSize="17dp">
                </TextView>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참여하기"
                    android:layout_marginTop="4dp"
                    android:typeface="serif"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp">
                </Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="11월 28일\n오후 4:00 ~ 오후 6:00\n '이동욱 상담사' 님의 1:1 상담 예약"
                    android:typeface="serif"
                    android:layout_marginLeft="20dp"
                    android:textSize="17dp">
                </TextView>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참여하기"
                    android:textColor="#67804d"
                    android:layout_marginTop="4dp"
                    android:typeface="serif"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp">
                </Button>
            </LinearLayout>
        </ScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#67804d"
            android:text="오늘의 추천 상담프로그램">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:textColor="#67804d"
            android:layout_marginLeft="50dp"
            android:text="SOM만의 특별한 전문 상담프로그램을 만나보세요">
        </TextView>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="#FFFFEC"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/솜솜이3"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp">
                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="#67804d"
                        android:layout_marginLeft="20dp"
                        android:text="'이병헌 상담사'님의 \n'나를 위한 힐링캠프'"
                        android:typeface="serif"
                        android:textSize="17dp">
                    </TextView>
                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:src="@drawable/별"
                        android:layout_gravity="center">
                    </ImageView>
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
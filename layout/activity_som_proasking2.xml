<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".som_proasking2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFEC"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B5D692"
            android:text="SOM"
            android:paddingLeft="15dp"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:textStyle="bold"
            android:typeface="serif">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이용할 서비스를 선택해주세요"
            android:typeface="serif"
            android:layout_gravity="center|top"
            android:layout_marginTop="50dp"
            android:paddingLeft="40dp"
            android:textSize="20dp"
            android:background="#FFFFEC">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전문 상담사 동반 상담은 유료서비스로 제공됩니다."
            android:typeface="serif"
            android:layout_gravity="center|top"
            android:paddingLeft="40dp"
            android:textSize="15dp"
            android:background="#FFFFEC">
        </TextView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="전문 상담사님의 자체 프로그램에 따라 집단 상담이 진행됩니다."
            android:typeface="serif"
            android:gravity="center"
            android:layout_gravity="center|top"
            android:layout_marginTop="90dp"
            android:textSize="20dp">
        </TextView>
        <Button
            android:id="@+id/BtnPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:padding="30dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="전문가 동반 상담">
        </Button>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="원하는 시간과 날짜에 매칭된 SOM 유저분들과 소통할 수 있습니다."
            android:typeface="serif"
            android:gravity="center"
            android:layout_gravity="center|top"
            android:layout_marginTop="90dp"
            android:textSize="20dp">
        </TextView>
        <Button
            android:id="@+id/BtnRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:typeface="serif"
            android:padding="30dp"
            android:layout_gravity="center"
            android:text="SOM 랜덤 상담">
        </Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
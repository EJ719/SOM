<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFEC">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B5D692"
        android:text="SOM"
        android:paddingLeft="15dp"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="serif">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="625dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:baseline="10dp"
                    android:src="@drawable/som2"></ImageView>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edge2"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:text="먼저 자기소개부터 해볼까요?"
                    android:textSize="17dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:baseline="10dp"
                    android:src="@drawable/som2"></ImageView>

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edge2"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:text="가볍게 하셔도 괜찮아요!"
                    android:textSize="17dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="237dp"
                    android:background="@drawable/edge5"
                    android:padding="8dp"
                    android:paddingLeft="5dp"
                    android:text="안녕하세요!"
                    android:textSize="17dp"></TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:baseline="30dp"
                    android:src="@drawable/som5"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77dp">

                <TextView
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:background="@drawable/edge5"
                    android:padding="8dp"
                    android:paddingLeft="5dp"
                    android:text="저는 oo년생 푸르른이라고 합니다."
                    android:textSize="17dp"></TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:baseline="30dp"
                    android:src="@drawable/som5"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:baseline="10dp"
                    android:src="@drawable/som7"></ImageView>

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edge7"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:text="안녕하세요 저는 어떤 일을 하고 있는 직장인입니다."
                    android:textSize="17dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:baseline="10dp"
                    android:src="@drawable/som7"></ImageView>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edge7"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:text="짧은 시간이지만 잘부탁드립니다."
                    android:textSize="17dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/som4"
                    android:baseline="10dp"
                    android:layout_marginLeft="10dp">
                </ImageView>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="반갑습니다. 저는 뭐...그린이라고 합니다."
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edge4">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:baseline="10dp"
                    android:src="@drawable/som1"></ImageView>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edge1"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:text="안녕하세요!!!"
                    android:textSize="17dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:baseline="10dp"
                    android:src="@drawable/som1"></ImageView>

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edge1"
                    android:paddingLeft="10dp"
                    android:text="저는 oo시에 살고 있는 빨강이라고 합니당"
                    android:textSize="17dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:baseline="10dp"
                    android:src="@drawable/som1"></ImageView>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edge1"
                    android:padding="8dp"
                    android:paddingLeft="10dp"
                    android:text="집단상담 처음이라서 떨리네용ㅎㅎ 다들 잘부탁드려요!"
                    android:textSize="17dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:background="@drawable/edge5"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:padding="8dp"
                    android:text="다들 반가워요^^"
                    android:textSize="17dp"></TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:baseline="30dp"
                    android:src="@drawable/som5"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"
        >
        <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginLeft="320dp"
            android:text="보내기"
            android:textSize="12dp"
            android:background="@drawable/buttoncolor">
        </Button>
    </LinearLayout>
</LinearLayout>